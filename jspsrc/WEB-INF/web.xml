<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
				http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">
         
<!-- Servlets -->
<servlet>
	<servlet-name>CreateDeckServlet</servlet-name>
	<servlet-class>servlet.CreateDeckServlet</servlet-class>
</servlet>
<servlet>
	<servlet-name>GameTesterServlet</servlet-name>
	<servlet-class>servlet.GameTesterServlet</servlet-class>
</servlet>

<!-- Servlet Mappings -->
<servlet-mapping>
	<servlet-name>CreateDeckServlet</servlet-name>
	<url-pattern>createDeck</url-pattern>
</servlet-mapping>
<servlet-mapping>
	<servlet-name>GameTesterServlet</servlet-name>
	<url-pattern>gameTester</url-pattern>
</servlet-mapping>

</web-app>
